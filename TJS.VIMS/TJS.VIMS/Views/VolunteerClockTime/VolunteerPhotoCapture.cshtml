@model TJS.VIMS.ViewModel.VolunteerClockInViewModel

@{
    ViewBag.Title = "VolunteerPhotoCapture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>VolunteerPhotoCapture</h2>

<div class="center">
    <div id="Camera"></div>
    <input type="button" value="Capture" onclick="webcam.capture();" />
</div>

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.webcam.js")">
    </script>
    <script type="text/javascript">
            $("#Camera").webcam({
                width: 320,
                height: 240,
                mode: "save",
                swffile: "@Url.Content("~/Scripts/jscam.swf")",
                onTick: function () { },
                onSave: function () {
                    UploadPic();
                },
                onCapture: function () {
                    //if(webcam.getCameraList().length != 0)
                        webcam.save("@Url.Content("~/VolunteerClockTime/Capture")/@Model.Volunteer.VolunteerId");
                },
                debug: function () { },
                onLoad: function () { }

            });
    </script>
}